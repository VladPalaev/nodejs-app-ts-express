root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4

[*.{css,scss,sass}]
indent_style = tab
indent_size = 4
